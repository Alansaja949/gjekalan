<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Top Bar: Logo & Language -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:src="@drawable/logo_login"
            android:scaleType="fitStart" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/gray_100">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:gravity="center_vertical">
                
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_sort_alphabetically"
                    app:tint="@color/gray_700"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bahasa Indonesia"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_primary"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Illustration Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/logo_login"
        android:scaleType="fitCenter" />

    <View
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <!-- Text Content -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat datang di Gojek!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplikasi yang buat hidupmu lebih nyaman. Siap bantu kebutuhanmu, kapan pun, di mana pun."
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp" />

    <!-- Indicator Dots (Simplified) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">
        <View android:layout_width="16dp" android:layout_height="4dp" android:background="@color/gojek_green" android:layout_margin="2dp" />
        <View android:layout_width="6dp" android:layout_height="6dp" android:background="@color/gray_200" android:layout_margin="2dp" />
        <View android:layout_width="6dp" android:layout_height="6dp" android:background="@color/gray_200" android:layout_margin="2dp" />
        <View android:layout_width="6dp" android:layout_height="6dp" android:background="@color/gray_200" android:layout_margin="2dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Buttons -->
    <Button
        android:id="@+id/btnMasuk"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Masuk"
        android:backgroundTint="@color/gojek_green"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="28dp" />

    <Button
        android:id="@+id/btnDaftar"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Belum ada akun? Daftar dulu"
        android:textColor="@color/gojek_green"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:strokeColor="@color/gojek_green"
        app:strokeWidth="1dp"
        app:cornerRadius="28dp" />

    <!-- Footer Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dengan masuk atau mendaftar, kamu menyetujui Ketentuan layanan dan Kebijakan privasi."
        android:textSize="11sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginTop="24dp" />

</LinearLayout>